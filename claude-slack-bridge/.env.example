# Required: Slack Bot OAuth Token (xoxb-...)
SLACK_BOT_TOKEN=

# Required: Slack App-Level Token for Socket Mode (xapp-...)
SLACK_APP_TOKEN=

# Required: Slack channel ID to post threads in
SLACK_CHANNEL_ID=

# Optional: Slack user ID to @ mention in new thread messages (e.g. U0123456789)
# This subscribes the user to thread notifications
SLACK_MENTION_USER_ID=

# Optional: Bridge HTTP port (default: 7890)
BRIDGE_PORT=7890

# Optional: Mapping TTL in milliseconds (default: 86400000 = 24h)
MAPPING_TTL_MS=86400000

# Optional: tmux session name (default: claudespace)
CSPACE_SESSION=claudespace
